<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Pastel Color Palette -->
    <SolidColorBrush x:Key="PastelBlue" Color="#E8F4FD"/>
    <SolidColorBrush x:Key="PastelPink" Color="#FFE8E8"/>
    <SolidColorBrush x:Key="PastelGreen" Color="#E8F5E8"/>
    <SolidColorBrush x:Key="PastelYellow" Color="#FFF8E1"/>
    <SolidColorBrush x:Key="PastelPurple" Color="#F3E5F5"/>
    <SolidColorBrush x:Key="PastelOrange" Color="#FFF3E0"/>
    <SolidColorBrush x:Key="PastelCyan" Color="#E0F7FA"/>
    <SolidColorBrush x:Key="PastelRose" Color="#FCE4EC"/>

    <!-- Light Theme Colors -->
    <SolidColorBrush x:Key="LightBackground" Color="#FAFAFA"/>
    <SolidColorBrush x:Key="LightSurface" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="LightPrimary" Color="#6200EE"/>
    <SolidColorBrush x:Key="LightSecondary" Color="#03DAC6"/>
    <SolidColorBrush x:Key="LightOnBackground" Color="#000000"/>
    <SolidColorBrush x:Key="LightOnSurface" Color="#000000"/>
    <SolidColorBrush x:Key="LightBorder" Color="#E0E0E0"/>

    <!-- Dark Theme Colors -->
    <SolidColorBrush x:Key="DarkBackground" Color="#121212"/>
    <SolidColorBrush x:Key="DarkSurface" Color="#1E1E1E"/>
    <SolidColorBrush x:Key="DarkPrimary" Color="#BB86FC"/>
    <SolidColorBrush x:Key="DarkSecondary" Color="#03DAC6"/>
    <SolidColorBrush x:Key="DarkOnBackground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="DarkOnSurface" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="DarkBorder" Color="#333333"/>

    <!-- Dynamic Theme Resources (Default to Light) -->
    <SolidColorBrush x:Key="AppBackground" Color="{StaticResource LightBackground}"/>
    <SolidColorBrush x:Key="AppSurface" Color="{StaticResource LightSurface}"/>
    <SolidColorBrush x:Key="AppPrimary" Color="{StaticResource LightPrimary}"/>
    <SolidColorBrush x:Key="AppSecondary" Color="{StaticResource LightSecondary}"/>
    <SolidColorBrush x:Key="AppOnBackground" Color="{StaticResource LightOnBackground}"/>
    <SolidColorBrush x:Key="AppOnSurface" Color="{StaticResource LightOnSurface}"/>
    <SolidColorBrush x:Key="AppBorder" Color="{StaticResource LightBorder}"/>

    <!-- Modern Button Style -->
    <Style x:Key="ModernButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource AppPrimary}"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="16,8"/>
        <Setter Property="Margin" Value="4"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            CornerRadius="8"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{StaticResource AppSecondary}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="{StaticResource AppSecondary}"/>
                            <Setter Property="RenderTransform">
                                <Setter.Value>
                                    <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Modern Card Style -->
    <Style x:Key="ModernCardStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource AppSurface}"/>
        <Setter Property="BorderBrush" Value="{StaticResource AppBorder}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="Padding" Value="16"/>
        <Setter Property="Margin" Value="8"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="2" Opacity="0.1" BlurRadius="8"/>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Modern TextBox Style -->
    <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
        <Setter Property="Background" Value="{StaticResource AppSurface}"/>
        <Setter Property="Foreground" Value="{StaticResource AppOnSurface}"/>
        <Setter Property="BorderBrush" Value="{StaticResource AppBorder}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="8"
                            Padding="{TemplateBinding Padding}">
                        <ScrollViewer x:Name="PART_ContentHost"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsFocused" Value="True">
                            <Setter Property="BorderBrush" Value="{StaticResource AppPrimary}"/>
                            <Setter Property="BorderThickness" Value="2"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Calendar Day Button Style -->
    <Style x:Key="CalendarDayButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource AppOnSurface}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Margin" Value="2"/>
        <Setter Property="Padding" Value="8"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            CornerRadius="6"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{StaticResource PastelBlue}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="{StaticResource AppPrimary}"/>
                            <Setter Property="Foreground" Value="White"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Event Item Style -->
    <Style x:Key="EventItemStyle" TargetType="Border">
        <Setter Property="CornerRadius" Value="6"/>
        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="Margin" Value="2"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="1" Opacity="0.1" BlurRadius="4"/>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Header Text Style -->
    <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="{StaticResource AppOnBackground}"/>
        <Setter Property="Margin" Value="0,0,0,16"/>
    </Style>

    <!-- Subtitle Text Style -->
    <Style x:Key="SubtitleTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Foreground" Value="{StaticResource AppOnBackground}"/>
        <Setter Property="Margin" Value="0,0,0,8"/>
    </Style>

    <!-- Body Text Style -->
    <Style x:Key="BodyTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="{StaticResource AppOnSurface}"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
    </Style>

</ResourceDictionary>
