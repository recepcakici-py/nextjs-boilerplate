<Window x:Class="CalendarAppWPF.Views.AddEventWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Etkinlik Ekle" 
        Height="600" 
        Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{DynamicResource AppBackground}">
    
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Resources/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Yeni Etkinlik Ekle" 
                   Style="{StaticResource HeaderTextStyle}"
                   HorizontalAlignment="Center"/>

        <!-- Form Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Spacing="16">
                
                <!-- Title -->
                <StackPanel>
                    <TextBlock Text="Başlık *" Style="{StaticResource SubtitleTextStyle}"/>
                    <TextBox x:Name="TitleTextBox" 
                             Style="{StaticResource ModernTextBoxStyle}"
                             Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>

                <!-- Description -->
                <StackPanel>
                    <TextBlock Text="Açıklama" Style="{StaticResource SubtitleTextStyle}"/>
                    <TextBox x:Name="DescriptionTextBox" 
                             Style="{StaticResource ModernTextBoxStyle}"
                             Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"
                             Height="80"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"/>
                </StackPanel>

                <!-- Date and Time -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Start Date/Time -->
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Başlangıç" Style="{StaticResource SubtitleTextStyle}"/>
                        <DatePicker x:Name="StartDatePicker" 
                                   SelectedDate="{Binding StartDateTime, UpdateSourceTrigger=PropertyChanged}"
                                   Margin="0,0,0,8"/>
                        <StackPanel Orientation="Horizontal">
                            <ComboBox x:Name="StartHourComboBox" 
                                     Width="60" 
                                     SelectedIndex="9"
                                     Margin="0,0,5,0">
                                <ComboBoxItem>00</ComboBoxItem>
                                <ComboBoxItem>01</ComboBoxItem>
                                <ComboBoxItem>02</ComboBoxItem>
                                <ComboBoxItem>03</ComboBoxItem>
                                <ComboBoxItem>04</ComboBoxItem>
                                <ComboBoxItem>05</ComboBoxItem>
                                <ComboBoxItem>06</ComboBoxItem>
                                <ComboBoxItem>07</ComboBoxItem>
                                <ComboBoxItem>08</ComboBoxItem>
                                <ComboBoxItem>09</ComboBoxItem>
                                <ComboBoxItem>10</ComboBoxItem>
                                <ComboBoxItem>11</ComboBoxItem>
                                <ComboBoxItem>12</ComboBoxItem>
                                <ComboBoxItem>13</ComboBoxItem>
                                <ComboBoxItem>14</ComboBoxItem>
                                <ComboBoxItem>15</ComboBoxItem>
                                <ComboBoxItem>16</ComboBoxItem>
                                <ComboBoxItem>17</ComboBoxItem>
                                <ComboBoxItem>18</ComboBoxItem>
                                <ComboBoxItem>19</ComboBoxItem>
                                <ComboBoxItem>20</ComboBoxItem>
                                <ComboBoxItem>21</ComboBoxItem>
                                <ComboBoxItem>22</ComboBoxItem>
                                <ComboBoxItem>23</ComboBoxItem>
                            </ComboBox>
                            <TextBlock Text=":" VerticalAlignment="Center" Margin="5,0"/>
                            <ComboBox x:Name="StartMinuteComboBox" 
                                     Width="60" 
                                     SelectedIndex="0">
                                <ComboBoxItem>00</ComboBoxItem>
                                <ComboBoxItem>15</ComboBoxItem>
                                <ComboBoxItem>30</ComboBoxItem>
                                <ComboBoxItem>45</ComboBoxItem>
                            </ComboBox>
                        </StackPanel>
                    </StackPanel>

                    <!-- End Date/Time -->
                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Bitiş" Style="{StaticResource SubtitleTextStyle}"/>
                        <DatePicker x:Name="EndDatePicker" 
                                   SelectedDate="{Binding EndDateTime, UpdateSourceTrigger=PropertyChanged}"
                                   Margin="0,0,0,8"/>
                        <StackPanel Orientation="Horizontal">
                            <ComboBox x:Name="EndHourComboBox" 
                                     Width="60" 
                                     SelectedIndex="10"
                                     Margin="0,0,5,0">
                                <ComboBoxItem>00</ComboBoxItem>
                                <ComboBoxItem>01</ComboBoxItem>
                                <ComboBoxItem>02</ComboBoxItem>
                                <ComboBoxItem>03</ComboBoxItem>
                                <ComboBoxItem>04</ComboBoxItem>
                                <ComboBoxItem>05</ComboBoxItem>
                                <ComboBoxItem>06</ComboBoxItem>
                                <ComboBoxItem>07</ComboBoxItem>
                                <ComboBoxItem>08</ComboBoxItem>
                                <ComboBoxItem>09</ComboBoxItem>
                                <ComboBoxItem>10</ComboBoxItem>
                                <ComboBoxItem>11</ComboBoxItem>
                                <ComboBoxItem>12</ComboBoxItem>
                                <ComboBoxItem>13</ComboBoxItem>
                                <ComboBoxItem>14</ComboBoxItem>
                                <ComboBoxItem>15</ComboBoxItem>
                                <ComboBoxItem>16</ComboBoxItem>
                                <ComboBoxItem>17</ComboBoxItem>
                                <ComboBoxItem>18</ComboBoxItem>
                                <ComboBoxItem>19</ComboBoxItem>
                                <ComboBoxItem>20</ComboBoxItem>
                                <ComboBoxItem>21</ComboBoxItem>
                                <ComboBoxItem>22</ComboBoxItem>
                                <ComboBoxItem>23</ComboBoxItem>
                            </ComboBox>
                            <TextBlock Text=":" VerticalAlignment="Center" Margin="5,0"/>
                            <ComboBox x:Name="EndMinuteComboBox" 
                                     Width="60" 
                                     SelectedIndex="0">
                                <ComboBoxItem>00</ComboBoxItem>
                                <ComboBoxItem>15</ComboBoxItem>
                                <ComboBoxItem>30</ComboBoxItem>
                                <ComboBoxItem>45</ComboBoxItem>
                            </ComboBox>
                        </StackPanel>
                    </StackPanel>
                </Grid>

                <!-- All Day Toggle -->
                <CheckBox x:Name="AllDayCheckBox" 
                         Content="Tüm gün" 
                         IsChecked="{Binding IsAllDay, UpdateSourceTrigger=PropertyChanged}"
                         Checked="AllDayCheckBox_Checked"
                         Unchecked="AllDayCheckBox_Unchecked"/>

                <!-- Category -->
                <StackPanel>
                    <TextBlock Text="Kategori" Style="{StaticResource SubtitleTextStyle}"/>
                    <ComboBox x:Name="CategoryComboBox" 
                             SelectedValue="{Binding Category, UpdateSourceTrigger=PropertyChanged}">
                        <ComboBoxItem Content="Genel" IsSelected="True"/>
                        <ComboBoxItem Content="İş"/>
                        <ComboBoxItem Content="Kişisel"/>
                        <ComboBoxItem Content="Toplantı"/>
                        <ComboBoxItem Content="Randevu"/>
                        <ComboBoxItem Content="Etkinlik"/>
                        <ComboBoxItem Content="Hatırlatma"/>
                    </ComboBox>
                </StackPanel>

                <!-- Color -->
                <StackPanel>
                    <TextBlock Text="Renk" Style="{StaticResource SubtitleTextStyle}"/>
                    <StackPanel Orientation="Horizontal">
                        <RadioButton x:Name="BlueColor" GroupName="EventColor" 
                                    Background="{StaticResource PastelBlue}" 
                                    Width="30" Height="30" Margin="5" 
                                    IsChecked="True"
                                    Checked="ColorRadioButton_Checked"/>
                        <RadioButton x:Name="PinkColor" GroupName="EventColor" 
                                    Background="{StaticResource PastelPink}" 
                                    Width="30" Height="30" Margin="5"
                                    Checked="ColorRadioButton_Checked"/>
                        <RadioButton x:Name="GreenColor" GroupName="EventColor" 
                                    Background="{StaticResource PastelGreen}" 
                                    Width="30" Height="30" Margin="5"
                                    Checked="ColorRadioButton_Checked"/>
                        <RadioButton x:Name="YellowColor" GroupName="EventColor" 
                                    Background="{StaticResource PastelYellow}" 
                                    Width="30" Height="30" Margin="5"
                                    Checked="ColorRadioButton_Checked"/>
                        <RadioButton x:Name="PurpleColor" GroupName="EventColor" 
                                    Background="{StaticResource PastelPurple}" 
                                    Width="30" Height="30" Margin="5"
                                    Checked="ColorRadioButton_Checked"/>
                        <RadioButton x:Name="OrangeColor" GroupName="EventColor" 
                                    Background="{StaticResource PastelOrange}" 
                                    Width="30" Height="30" Margin="5"
                                    Checked="ColorRadioButton_Checked"/>
                    </StackPanel>
                </StackPanel>

                <!-- Reminder -->
                <StackPanel>
                    <CheckBox x:Name="ReminderCheckBox" 
                             Content="Hatırlatma" 
                             IsChecked="{Binding HasReminder, UpdateSourceTrigger=PropertyChanged}"
                             Checked="ReminderCheckBox_Checked"
                             Unchecked="ReminderCheckBox_Unchecked"/>
                    <ComboBox x:Name="ReminderComboBox" 
                             SelectedValue="{Binding ReminderMinutes, UpdateSourceTrigger=PropertyChanged}"
                             Margin="0,8,0,0"
                             IsEnabled="{Binding IsChecked, ElementName=ReminderCheckBox}">
                        <ComboBoxItem Content="5 dakika önce" Tag="5"/>
                        <ComboBoxItem Content="15 dakika önce" Tag="15" IsSelected="True"/>
                        <ComboBoxItem Content="30 dakika önce" Tag="30"/>
                        <ComboBoxItem Content="1 saat önce" Tag="60"/>
                        <ComboBoxItem Content="2 saat önce" Tag="120"/>
                        <ComboBoxItem Content="1 gün önce" Tag="1440"/>
                    </ComboBox>
                </StackPanel>

            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" 
                   Orientation="Horizontal" 
                   HorizontalAlignment="Right" 
                   Margin="0,20,0,0">
            <Button Content="İptal" 
                   Style="{StaticResource ModernButtonStyle}"
                   Background="Gray"
                   Click="CancelButton_Click"
                   Margin="0,0,10,0"/>
            <Button Content="Kaydet" 
                   Style="{StaticResource ModernButtonStyle}"
                   Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
