<UserControl x:Class="CalendarAppWPF.Views.CalendarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900"
             Background="{DynamicResource AppBackground}">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Resources/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header with navigation and view controls -->
        <Border Grid.Row="0" 
                Style="{StaticResource ModernCardStyle}" 
                Margin="10,10,10,5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Navigation buttons -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button Content="â—€" 
                            Command="{Binding PreviousPeriodCommand}"
                            Style="{StaticResource ModernButtonStyle}"
                            Width="40" Height="40"
                            FontSize="16"/>
                    <Button Content="BugÃ¼n" 
                            Command="{Binding TodayCommand}"
                            Style="{StaticResource ModernButtonStyle}"
                            Margin="10,0"/>
                    <Button Content="â–¶" 
                            Command="{Binding NextPeriodCommand}"
                            Style="{StaticResource ModernButtonStyle}"
                            Width="40" Height="40"
                            FontSize="16"/>
                </StackPanel>

                <!-- Current period display -->
                <TextBlock Grid.Column="1" 
                          Text="{Binding CurrentPeriodText}"
                          Style="{StaticResource HeaderTextStyle}"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"
                          Margin="20,0"/>

                <!-- View mode buttons -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="0,0,10,0">
                    <Button Content="GÃ¼nlÃ¼k" 
                            Command="{Binding ShowDayViewCommand}"
                            Style="{StaticResource ModernButtonStyle}"/>
                    <Button Content="HaftalÄ±k" 
                            Command="{Binding ShowWeekViewCommand}"
                            Style="{StaticResource ModernButtonStyle}"/>
                    <Button Content="AylÄ±k" 
                            Command="{Binding ShowMonthViewCommand}"
                            Style="{StaticResource ModernButtonStyle}"/>
                </StackPanel>

                <!-- Add event and settings -->
                <StackPanel Grid.Column="3" Orientation="Horizontal">
                    <Button Content="+ Etkinlik" 
                            Command="{Binding AddEventCommand}"
                            Style="{StaticResource ModernButtonStyle}"
                            Background="{StaticResource AppSecondary}"/>
                    <Button Content="ðŸŒ™" 
                            Command="{Binding ToggleDarkModeCommand}"
                            Style="{StaticResource ModernButtonStyle}"
                            Width="40" Height="40"
                            Margin="10,0,0,0"
                            ToolTip="KaranlÄ±k/AydÄ±nlÄ±k Mod"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Calendar content area -->
        <Border Grid.Row="2" 
                Style="{StaticResource ModernCardStyle}" 
                Margin="10,5,10,10">
            <Grid x:Name="CalendarContentGrid">
                <!-- Month View (default) -->
                <Grid x:Name="MonthViewGrid" Visibility="Visible">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Day headers -->
                    <Grid Grid.Row="0" Background="{StaticResource AppSurface}" Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Pazartesi" Style="{StaticResource SubtitleTextStyle}" HorizontalAlignment="Center"/>
                        <TextBlock Grid.Column="1" Text="SalÄ±" Style="{StaticResource SubtitleTextStyle}" HorizontalAlignment="Center"/>
                        <TextBlock Grid.Column="2" Text="Ã‡arÅŸamba" Style="{StaticResource SubtitleTextStyle}" HorizontalAlignment="Center"/>
                        <TextBlock Grid.Column="3" Text="PerÅŸembe" Style="{StaticResource SubtitleTextStyle}" HorizontalAlignment="Center"/>
                        <TextBlock Grid.Column="4" Text="Cuma" Style="{StaticResource SubtitleTextStyle}" HorizontalAlignment="Center"/>
                        <TextBlock Grid.Column="5" Text="Cumartesi" Style="{StaticResource SubtitleTextStyle}" HorizontalAlignment="Center"/>
                        <TextBlock Grid.Column="6" Text="Pazar" Style="{StaticResource SubtitleTextStyle}" HorizontalAlignment="Center"/>
                    </Grid>

                    <!-- Calendar grid -->
                    <ItemsControl Grid.Row="1" x:Name="CalendarDaysControl">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="7" Rows="6"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="{StaticResource AppBorder}" 
                                       BorderThickness="0.5"
                                       Background="Transparent"
                                       MinHeight="80">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>

                                        <!-- Day number -->
                                        <TextBlock Grid.Row="0" 
                                                  Text="{Binding Day}"
                                                  Style="{StaticResource BodyTextStyle}"
                                                  HorizontalAlignment="Right"
                                                  VerticalAlignment="Top"
                                                  Margin="5"
                                                  FontWeight="Bold"/>

                                        <!-- Events for this day -->
                                        <ItemsControl Grid.Row="1" 
                                                     ItemsSource="{Binding Events}"
                                                     Margin="2">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Background="{Binding Color}"
                                                           Style="{StaticResource EventItemStyle}"
                                                           ToolTip="{Binding Description}"
                                                           MouseLeftButtonUp="EventItem_Click">
                                                        <TextBlock Text="{Binding Title}"
                                                                  Style="{StaticResource BodyTextStyle}"
                                                                  FontSize="10"
                                                                  TextTrimming="CharacterEllipsis"
                                                                  MaxLines="1"/>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>

                <!-- Week View -->
                <Grid x:Name="WeekViewGrid" Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Week day headers -->
                    <Grid Grid.Row="0" Background="{StaticResource AppSurface}" Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Saat" Style="{StaticResource SubtitleTextStyle}" HorizontalAlignment="Center"/>
                        <TextBlock Grid.Column="1" Text="Pzt" Style="{StaticResource SubtitleTextStyle}" HorizontalAlignment="Center"/>
                        <TextBlock Grid.Column="2" Text="Sal" Style="{StaticResource SubtitleTextStyle}" HorizontalAlignment="Center"/>
                        <TextBlock Grid.Column="3" Text="Ã‡ar" Style="{StaticResource SubtitleTextStyle}" HorizontalAlignment="Center"/>
                        <TextBlock Grid.Column="4" Text="Per" Style="{StaticResource SubtitleTextStyle}" HorizontalAlignment="Center"/>
                        <TextBlock Grid.Column="5" Text="Cum" Style="{StaticResource SubtitleTextStyle}" HorizontalAlignment="Center"/>
                        <TextBlock Grid.Column="6" Text="Cmt" Style="{StaticResource SubtitleTextStyle}" HorizontalAlignment="Center"/>
                        <TextBlock Grid.Column="7" Text="Paz" Style="{StaticResource SubtitleTextStyle}" HorizontalAlignment="Center"/>
                    </Grid>

                    <!-- Week schedule grid -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <Grid x:Name="WeekScheduleGrid">
                            <!-- Time slots and events will be generated in code-behind -->
                        </Grid>
                    </ScrollViewer>
                </Grid>

                <!-- Day View -->
                <Grid x:Name="DayViewGrid" Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Day header -->
                    <Border Grid.Row="0" 
                           Background="{StaticResource AppSurface}" 
                           Padding="10" 
                           Margin="0,0,0,10">
                        <TextBlock Text="{Binding CurrentDate, StringFormat='dddd, dd MMMM yyyy'}"
                                  Style="{StaticResource SubtitleTextStyle}"
                                  HorizontalAlignment="Center"/>
                    </Border>

                    <!-- Day schedule -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding CurrentViewEvents}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{Binding Color}"
                                           Style="{StaticResource EventItemStyle}"
                                           Margin="5"
                                           MouseLeftButtonUp="EventItem_Click">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                                <TextBlock Text="{Binding StartDateTime, StringFormat='HH:mm'}"
                                                          Style="{StaticResource BodyTextStyle}"
                                                          FontWeight="Bold"/>
                                                <TextBlock Text="{Binding EndDateTime, StringFormat='HH:mm'}"
                                                          Style="{StaticResource BodyTextStyle}"
                                                          FontSize="12"
                                                          Opacity="0.7"/>
                                            </StackPanel>

                                            <StackPanel Grid.Column="1">
                                                <TextBlock Text="{Binding Title}"
                                                          Style="{StaticResource SubtitleTextStyle}"
                                                          FontSize="16"/>
                                                <TextBlock Text="{Binding Description}"
                                                          Style="{StaticResource BodyTextStyle}"
                                                          TextWrapping="Wrap"
                                                          Opacity="0.8"/>
                                                <TextBlock Text="{Binding Category}"
                                                          Style="{StaticResource BodyTextStyle}"
                                                          FontSize="12"
                                                          Opacity="0.6"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
